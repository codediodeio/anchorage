<h1>All Regions</h1>

<div class="row well">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
    <tr>
      <td><%= region.name %></td>
      <td><%= link_to 'View', region %></td>
      <td><%= link_to 'Edit', edit_region_path(region) %></td>
      <td><%= link_to 'Destroy', region, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @regions %>
<%= link_to 'New Region', new_region_path, class: "btn btn-primary" %>

</div>
