<h1>Listing anchors</h1>

<div class="row well">

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Created by</th>
        <th>Received by</th>
        <th>Type</th>
        <th>Location</th>
        <th>Created</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @anchors.each do |anchor| %>
      <tr>
        <td><%= link_to anchor.user.username, profile_path(anchor.user) %></td>
        <td><%= link_to anchor.anchorable_user.username, profile_path(anchor.anchorable_user) %></td>
        <td><%= anchor.anchorable.class.name %></td>
        <td><%= anchor.anchorable.location.name %></td>
        <td><%= anchor.created_at.strftime("%m/%d/%Y") %></td>

        <td><%= link_to 'View', anchor.anchorable.location %></td>
        <td><%= link_to '*Edit', '#' %></td>
        <td><%= link_to '*Destroy', '#', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @anchors %>

  <br>

</div>
