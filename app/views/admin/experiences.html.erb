<h1>Listing experiences</h1>

<div class="row well">

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>User</th>
        <th>Location</th>
        <th>Anchors</th>
        <th>Posted</th>
        <th>Characters</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @experiences.each do |experience| %>
      <tr>
        <td><%= link_to experience.user.username, profile_path(experience.user) %></td>
        <td><%= link_to experience.location.name, experience.location %></td>
        <td><%= experience.anchors.count %></td>
        <td><%= experience.created_at.strftime("%m/%d/%Y") %></td>
        <td><%= experience.body.length %></td>
        <td><%= link_to 'View', experience %></td>
        <td><%= link_to 'Edit', edit_experience_path(experience) %></td>
        <td><%= link_to 'Destroy', experience, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @experiences %>

  <br>

</div>
