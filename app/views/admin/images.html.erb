<% content_for :title, "Admin Images" %>

<h1>Listing images</h1>

<div class="row well">

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>User</th>
        <th>Location</th>
        <th>Anchors</th>
        <th>Posted</th>
        <th>File Size</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @images.each do |image| %>
      <tr>
        <td><%= link_to image.user.username, profile_path(image.user) %></td>
        <td><%= link_to image.location.name, image.location %></td>
        <td><%= image.anchors.count %></td>
        <td><%= image.created_at.strftime("%m/%d/%Y") %></td>
        <td><%= image.file.size/1000 %> Kb</td>
        <td><%= link_to 'View', image %></td>
        <td><%= link_to 'Edit', edit_image_path(id: image.id, location_id: image.location.id) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @images %>

  <br>

</div>
