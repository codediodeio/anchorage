<% if @anchors_received.any? %>
<% @anchors_received.map do |a| %>
<ul class="dashboard-list">
  <% unless a.user.blank? %>
  <li>
    <i class="hi hi-user"></i>
    <%= link_to a.user.username, profile_path(a.user.username), class: 'label label-teal'  %> <i class="hi hi-anchor"></i> your <%= sanitize(source_label(a.anchorable_type)) %> <i class="hi hi-arrow-circle-right"></i>
    <%= link_to a.anchorable.location.name, location_path(a.anchorable.location), class: 'label label-primary' %> <i class="hi hi-clock-o"></i>
    <span class="label label-default"><%= time_ago_in_words(a.created_at) %> ago</span>
    </li>
    <hr class="visible-sm visible-xs">
    <% end %>
</ul>

  <% end %>



<% else %>

<p>You haven't received any anchors yet... Share and experience or image to start getting anchors.</p>

<% end %>
