<!-- Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="imageModalLabel">Image</h4>
      </div>
      <div class="modal-body">

        <div class="spinner image-spinner"><i class="fa fa-cog fa-spin fa-2x"></i> loading image...</div>

        <%= div_for @image do %>

        <%= link_to image_tag(@image.file_url, style: "max-width: 100%;", class: "modal-image"), @image  %>

        <h3>Description</h3>
        <p><%= @image.description %></p>

        <p>Taken by <%= link_to @image.user.username, profile_path(@image.user.username), class: "text-primary" %> at <%= @image.location.name %>. Posted <%= @image.created_at.strftime("%m/%d/%Y") %></p>
        <% end %>

        <div class="row">
            <div class="col-md-12">
            <a href="https://www.pinterest.com/pin/create/button/?url=<%= location_url(@image.location) %>&media=<%= @image.file.url %>&description=<%= @image.description %>" data-pin-do="buttonPin" data-pin-config="beside" data-pin-color="white" data-pin-height="28">
             <img src="//assets.pinterest.com/images/pidgets/pinit_fg_en_rect_white_28.png" />
           </a>
          </div>
        </div>

      </div>
      <div class="modal-footer">
        <%= render partial: "anchors/image_button", locals: {img: @image} %>
        <button type="button" class="btn btn-warning btn-sm" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
