<div class="well" id="imageWell">
  <div class="spinner"><i class="fa fa-cog fa-spin"></i> working, just a sec...</div>
<div id="imageErrors"></div>
<%= form_for(@image, remote: true) do |f| %>

  <div class="field">
    <%= f.label :file, "Choose Image File" %>
    <%= f.file_field :file %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control", placeholder: "Describe this image in 250 characters or less...", maxlength: 250 %>
  </div>
  <div class="field">
    <%= f.hidden_field :location_id, value: @location.id %>
  </div>
  <div class="blank-space"></div>
  <div class="actions">
    <%= f.submit "Add Image", class: "btn btn-primary btn-sm" %> <%= link_to "Cancel", "#", class: "btn btn-warning btn-sm", id: "cancelButton" %>
  </div>
<% end %>
</div>
