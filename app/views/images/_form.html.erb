<div id="imageWell">
<div id="imageErrors"></div>
<%= form_for([@location, @image], remote: true) do |f| %>
<%= f.hidden_field :location_id, value: @location.id %>

  <div class="field">
    <%= f.label :file, "Choose Image File" %>
    <%= f.file_field :file %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control", placeholder: "Describe this image in 250 characters or less...", maxlength: 250 %>
  </div>

  <div class="blank-space"></div>

  <div class="spinner"><i class="hi hi-cog hi-spin"></i> uploading, just a sec...
    <div class="blank-space"></div>
  </div>

  <div class="actions">
    <%= f.submit "Upload Image", class: "btn btn-primary btn-sm btn-async", "data-loading-text"=> "uploading image..." %> <button type="button" class="btn btn-warning btn-sm" data-dismiss="modal">Nevermind</button>
  </div>

<% end %>
</div>
