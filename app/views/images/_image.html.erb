<%= div_for(img, class: "each-image") do %>

  <div class="col-sm-6 col-md-4">
    <div class="polaroid">
    <%= link_to image_tag(img.file_url(:thumb), style: "max-width:100%;height:auto;"), img, remote: true %>
      <div class="polaroid-caption">
        <div class="row">
          <div class="col-xs-4">
            <%= render partial: "anchors/image_button", locals: { img: img } %>
          </div>

          <div class="col-xs-8">
            <p class="img-user"><%= link_to img.user.username, profile_path(img.user) %></p>
            <p><%= link_to img, class: "btn btn-primary btn-xs", remote: true do %>
              <i class="fa fa-eye"></i> View Image
              <% end %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

<% end %>


