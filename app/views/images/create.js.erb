<% if @image.errors.any? %>

  $("#new_image").remove();
  $('#imageForm').html('<%= j render partial: "images/form" %>');
  $("#image_file").fileinput();

  $('#cancelButton').on("click", function(e){
    e.preventDefault();
    $('#imageForm').slideToggle(function(){
      $("#new_image").remove();
    });
  });

  <% @image.errors.full_messages.each do |message| %>

  $('#imageErrors').html("");
  $('#imageErrors').append("<li class='text-danger'><%= message %></li>");

  <% end %>

<% else %>

//$('#imageFeed').find('.each-image:first').replaceWith('<%= j render partial: "images/image", locals: { img: @image } %>');

$('#imageErrors').html("");

$('#imageWell').hide();


$("#flash-messages").html('<div class="alert alert-success alert-dismissible" role="alert"><button class="close" data-dismiss="alert"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>Photo uploaded successfully!</div>');

$(".alert-dismissible").delay(1500).fadeOut();

<% end %>
