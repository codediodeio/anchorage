<% if @image.errors.any? %>

  $('.btn-async').button('reset');

  <% @image.errors.full_messages.each do |message| %>

  $('#imageErrors').html("");
  $('#imageErrors').append("<li class='text-danger'><%= message %></li>");

  <% end %>

<% else %>

$('#imageErrors').html("");
$('#shareImageModal').modal('hide');

$("#flash-messages").html('<div class="alert alert-success alert-dismissible" role="alert"><button class="close" data-dismiss="alert"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>Photo uploaded successfully! Give us a few seconds to save it to the cloud before it goes live.</div>');

$(".alert-dismissible").delay(6000).fadeOut();

<% end %>
