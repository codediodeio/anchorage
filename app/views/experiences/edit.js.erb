$('div#<%= dom_id(@experience) %>').find('#editForm form').remove();
$('div#<%= dom_id(@experience) %>').find("#editForm").append('<%= j render partial: "experiences/form" %>').hide();

$('div#<%= dom_id(@experience) %>').find("#editForm").slideDown("slow", function(){
});

$('.wysihtml5').each(function(i, elem) {
  $(elem).wysihtml5({
    toolbar: {
      "fa": true,
      "font-styles": true, //Font styling, e.g. h1, h2, etc. Default true
      "emphasis": true, //Italics, bold, etc. Default true
      "lists": true, //(Un)ordered lists, e.g. Bullets, Numbers. Default true
      "html": false, //Button which allows you to edit the generated HTML. Default false
      "link": true, //Button to insert a link. Default true
      "image": false, //Button to insert an image. Default true,
      "color": false, //Button to change color of font
      "blockquote": false, //Blockquote
      "size": "sm" //default: none, other options are xs, sm, lg
    }
  });
});

$('html,body').animate({
  scrollTop: $("#editForm").offset().top
}, 800);

$('#cancelButton').on("click", function(e){
  e.preventDefault();
  $(this).closest('#experienceWell').slideUp(function(){
    $(this).find('form').remove();
  });
});
