<div class="row">

  <div class="col-xs-6 col-xs-offset-3">

    <h3>Sign up with Social Account</h3>


    <%= button_to user_omniauth_authorize_path(:google_oauth2), class: 'btn google-button', method: :get do %>
    <%= fa_icon "google-plus" %> <strong>Google+</strong>
    <% end %>

    <div class="blank-space"></div>

    <%= button_to user_omniauth_authorize_path(:facebook), class: 'btn facebook-button', method: :get do %>
    <%= fa_icon "facebook" %> <strong>Facebook</strong>
    <% end %>

    <hr>


    <h3>Sign up with Email</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<p class="text-danger"><%= devise_error_messages! %></p>


<%= f.label :email %><br />
<div class="inner-addon left-addon">
  <i class="fa fa-envelope"></i>
  <%= f.email_field :email, autofocus: true, class: "form-control" %>
</div>

<%= f.label :password %>
<% if @validatable %>
<em>(<%= @minimum_password_length %> characters minimum)</em>
<% end %><br />
<div class="inner-addon left-addon">
  <i class="fa fa-key"></i>
  <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
</div>

<div class="blank-space"></div>

<%= f.submit "Sign Up", class: "btn btn-primary" %> <div class="spinner"><i class="fa fa-cog fa-spin"></i> just a sec...</div>
</div>
<% end %>

</div>
</div>
