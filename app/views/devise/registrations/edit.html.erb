<% content_for :title, "Edit Profile" %>

<div class="row">

  <div class="col-xs-12 col-md-8 col-md-offset-2 well">

<h2>Edit Profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: :true }) do |f| %>
<div class="modal-errors"><%= devise_error_messages! %></div>

<h3>Personal Info</h3>

<%= image_tag @user.image_url(:thumb), class: 'avatar' %>

<div class="row">
  <div class="col-xs-12 col-md-6">

    <%= f.label :username %><br />
    <div class="inner-addon left-addon">
      <i class="hi hi-user"></i>
      <%= f.text_field :username, autofocus: true, class: "form-control", autocomplete: :off,  spellcheck: false %>
    </div>
  </div>

  <div class="col-xs-12 col-md-6">
    <%= f.label :image, "Avatar Image (square images look best)" %><br />
    <%= f.file_field :image, class: "form-control" %>
  </div>

</div>

<%= f.label :email %><br />
<div class="inner-addon left-addon">
  <i class="hi hi-envelope"></i>
  <%= f.email_field :email, class: "form-control", autocomplete: :off %>
</div>

<div class="row">
  <div class="col-xs-12 col-md-6">
    <%= f.label :fname, "First Name" %><br />
    <div class="inner-addon left-addon">
      <i class="hi hi-user"></i>
      <%= f.text_field :fname, autofocus: true, class: "form-control", autocomplete: :off,  spellcheck: false %>
    </div>
  </div>

  <div class="col-xs-12 col-md-6">
    <%= f.label :lname, "Last Name" %><br />
    <div class="inner-addon left-addon">
      <i class="hi hi-user"></i>
      <%= f.text_field :lname, autofocus: true, class: "form-control", autocomplete: :off,  spellcheck: false %>
    </div>
  </div>
</div>

<h3>Promote your Blog</h3>

<%= f.label :blog %><br />
<div class="inner-addon left-addon">
  <i class="hi hi-comment"></i>
  <%= f.url_field :blog, class: "form-control", spellcheck: false, html: { placeholder: "http://..." } %>
</div>

<%= f.label :donation, "Donation Link" %><br />
<div class="inner-addon left-addon">
  <i class="hi hi-beer"></i>
  <%= f.text_field :donation, class: "form-control", autocomplete: :off %>
</div>

<%= f.label :bio %><br />
<%= f.text_area :bio, class: "form-control", autocomplete: :off %>

<h3>Boat Info</h3>

<%= f.label :location, "Hailing Port" %><br />
<div class="inner-addon left-addon">
  <i class="hi hi-anchor"></i>
  <%= f.text_field :location, class: "form-control", autocomplete: :off %>
</div>

<%= f.label :boatname, "Boat Name" %><br />
<div class="inner-addon left-addon">
  <i class="hi hi-ship"></i>
  <%= f.text_field :boatname, class: "form-control", autocomplete: :off %>
</div>


<%= f.label :boatmodel, "Boat Make and Model" %><br />
<div class="inner-addon left-addon">
  <i class="hi hi-anchor"></i>
  <%= f.text_field :boatmodel, class: "form-control", autocomplete: :off %>
</div>


<div class="blank-space"></div>


<div id="changePassword">

  <h3>Change Password</h3>

  <%= f.label :password, "New Password (leave blank if you don't want to change it)" %>
  <% if @validatable %>
  <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>


  <div class="field">
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
</div>

<div class="field">
  <%= f.label :current_password, 'Current Password (we need your current password to confirm your changes)' %> <br />
  <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
</div>

</div>

<div class="blank-space"></div>

<%= f.submit "Update Profile", class: "btn btn-primary" %> <div class="spinner"><i class="hi hi-cog hi-spin"></i> just a sec...</div>
</div>
<% end %>

</div>
</div>
