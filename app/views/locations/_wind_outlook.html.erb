<div class="row">
  <div class="col-xs-12">
  <h3>Today's Wind Forecast</h3>
  </div>
  <div class="col-md-3 col-xs-12 col-wind">
    <h6 class="dark-blue-flag">Right Now</h6>
    <%= simple_time(@now.time, @offset) %><br>
    <i class="<%= wind_matcher(@now.windSpeed) %> wi-2x"></i><br>
    <%= @now.windSpeed %>mph <%= @now.windBearing %>&deg;<br>
  </div>

  <div class="col-md-3 col-xs-12 col-wind">
    <h6 class="dark-blue-flag">In 3 Hours</h6>
     <%= simple_time(@hour[3].time, @offset) %><br>
    <i class="<%= wind_matcher(@hour[3].windSpeed) %> wi-2x"></i><br>
    <%= @hour[3].windSpeed %>mph <%= @hour[3].windBearing %>&deg;<br>
  </div>

  <div class="col-md-3 col-xs-12 col-wind">
