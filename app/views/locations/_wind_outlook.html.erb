    <%= simple_time(@hour[6].time, @offset) %><br>
    <i class="<%= wind_matcher(@hour[6].windSpeed) %> wi-2x"></i><br>
    <%= @hour[6].windSpeed %>mph <%= @hour[6].windBearing %>&deg;<br>
  </div>

  <div class="col-md-3 col-xs-12 col-wind">
    <h6 class="dark-blue-flag">In 12 Hours</h6>
    <%= simple_time(@hour[12].time, @offset) %><br>
    <i class="<%= wind_matcher(@hour[12].windSpeed) %> wi-2x"></i><br>
    <%= @hour[12].windSpeed %>mph <%= @hour[12].windBearing %>&deg;<br>
  </div>

</div>
