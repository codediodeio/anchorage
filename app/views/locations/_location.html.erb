<%= div_for location do %>
<div class="row well">

  <div class="col-sm-6 col-md-6">
      <h3><%=  location.name %></h3>
      <p>Regions: <% location.regions.each do |region| %>
      <%= link_to "#{region.name} ", region %>
      <% end %>
      </p>
  </div>

  <div class="col-sm-3 col-md-3">
    <h5>Knowledge Base</h5>
    <p>Experiences: <%=  location.experiences.count %></p>
    <p>Images: <%=  location.images.count %></p>
  </div>

  <div class="col-sm-3 col-md-3">
    <%= link_to location, class: "btn btn-primary btn-xs" do %>
    <i class="fa fa-eye"></i> View Location
    <% end %><br />

    <%= link_to '#', remote: true, class: "btn btn-success btn-xs" do %>
    <i class="fa fa-book"></i> Add to Cruising Guide
    <% end %>

    <%= link_to '#', remote: true, class: "btn btn-danger btn-xs" do %>
    <i class="fa fa-trash"></i> Remove from Cruising Guide
    <% end %>
  </div>

</div>
<% end %>
