<%= div_for location do %>
<div class="row well">

  <div class="col-sm-6 col-md-6">
      <h3><%=  link_to location.name, location, class: "text-primary" %></h3>
      <p>Regions: <% location.regions.each do |region| %>
      <%= link_to "#{region.name} ", region %>
      <% end %>
      </p>
  </div>

  <div class="col-sm-3 col-md-3">
    <h5>Knowledge Base</h5>
    <p>Experiences: <%=  location.experiences.count %></p>
    <p>Images: <%=  location.images.count %></p>
  </div>

  <div class="col-sm-3 col-md-3">

    <%= render partial: "pages/button", locals: { location: location } %>

  </div>

</div>
<% end %>
