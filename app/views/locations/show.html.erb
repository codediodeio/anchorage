<% content_for :title, @location.name %>
<% content_for :head do %>
 <meta name="description" content="Local experiences and photos from boaters at <%= @location.name %>">
<% end %>

<%= div_for @location do %>
<div class="row">
  <div class="col-md-12 col-xs-12">
    <h1 class="title-flag shadow"><%= @location.name %></h1>
  </div>
</div>


<div class="row">

  <!-- Description -->
  <div class="col-xs-12 col-md-9">
    <div class="well">
      <div class="row">
        <div class="col-xs-12 col-md-12">
          <%= render partial: "pages/button", locals: {location: @location} %>
          <%= render partial: "social_share" %>
        </div>
      </div>
    </div>

    <div class="well">
    <div class="row">
        <div class="col-md-8 col-xs-12">
        <%= render partial: "description" %>
        <div class="blank-space"></div>
        </div>
          <div class="col-md-4 col-xs-12">
            <%= render partial: 'map' %>
            <%= render partial: 'map_script' %>
          </div>
        </div>
        </div>
        <div id="windOutlook" class="wind-outlook">
          <h3>Today's Wind Forecast</h3>
          <div class="forecast-spinner"><i class="fa fa-cog fa-spin"></i> loading wind forecast...</div>
      </div>
    </div>


    <!-- Photos -->

    <h3 class="pink-flag shadow">Photos</h3>

    <%= render "locations/images" %>

    <div id="imageForm"></div>

    <hr>


    <div id="experienceForm"></div>

    <h3 class="blue-flag shadow">Experiences</h3>


    <div id="experienceFeed" class="col-xs-12">
      <% if @experiences.any? %>
      <% @experiences.each do |exp| %>
      <%= render partial: "experiences/experience", locals: {exp: exp} %>
      <% end %>
      <%= render partial: "locations/share_experience_button" %>
      <% else %>
      <div class="row well" id="noExperiences">
        <p class="text-info"><i class="fa fa-trophy"></i> No first-hand experiences have been shared. Be the first and get the coveted columbus badge!</p>
        <%= render partial: "locations/share_experience_button" %>
      </div>
      <% end %>
    </div>


  </div>




  <div class="col-xs-12 col-md-3">

    <!-- Nearby Anchorages -->
    <h4 class="orange-flag shadow">Nearby Anchorages</h4>
    <div class="well">
      <%= render partial: 'near' %>
    </div>



    <!-- Key Stats -->
    <h4 class="yellow-flag shadow">Key Stats</h4>
    <div class="well">
      <%= render "locations/stats" %>
    </div>

    <!-- Weather -->
    <h4 class="dark-blue-flag shadow">Weather</h4>
    <div class="well">
      <div id="forecast">
        <div class="forecast-spinner"><i class="fa fa-cog fa-spin"></i> loading weather...</div>
        <%= render partial: "forecast_script" %>
      </div>
    </div>

  </div>

</div>

<% end %>
