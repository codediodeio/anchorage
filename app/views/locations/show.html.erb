<% content_for :title, @location.name %>

<%= div_for @location do %>

<h1><%= @location.name %></h1>


<div class="row">

  <!-- Description -->
  <div class="col-xs-12 col-md-9">

    <%= render "description" %>

    <!-- Photos -->

    <%= render "locations/images" %>


    <div id="imageForm"></div>

    <hr />

    <!-- Experiences -->

    <div id="shareButtons">
      <%= render "share_buttons" %>
    </div>

    <div id="experienceForm"></div>

    <h2>Experiences</h2>


    <div id="experienceFeed" class="col-xs-12">
      <% if @experiences.any? %>
      <% @experiences.each do |exp| %>
      <%= render partial: "experiences/experience", locals: {exp: exp} %>
      <% end %>
      <% else %>
      <div class="row well" id="noExperiences">
        <p class="text-info"><i class="fa fa-trophy"></i> No first-hand experiences have been shared. Be the first and get the coveted columbus badge!</p>
      </div>

      <% end %>
    </div>


  </div>




  <div class="col-xs-12 col-md-3">
    <!-- Map
    <div class="well">
      <div id="map-canvas" data-lat="<%= @location.stat.lat %>" data-long="<%= @location.stat.long %>"></div>
    </div>
  -->


    <div class="well">
      <h3>Key Stats</h3>
      <%= render "locations/stats" %>
    </div>

    <!-- Map
    <div class="well">
      WEATHER
    </div>
     -->
  </div>

</div>

<% end %>
