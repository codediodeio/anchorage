<script>
$(document).on("ready page:load", initialize);

function initialize() {
  var locations = $('#map-attr').data('locations');
  var mapOptions = {
    zoom: 14,
    center: new google.maps.LatLng(locations[1], locations[2]),
    mapTypeId: google.maps.MapTypeId.SATELLITE,
    disableDefaultUI: true,
    zoomControl: true
  }

  var map = new google.maps.Map(document.getElementById('map-canvas'),
      mapOptions);

      var image = {
      url:"http://storage.googleapis.com/anchorage/assets/marker-large.png",
      size: new google.maps.Size(20, 32),
      scaledSize: new google.maps.Size(20, 32)
      };

  var myLatLng = new google.maps.LatLng(locations[1], locations[2]);
  var beachMarker = new google.maps.Marker({
      position: myLatLng,
      map: map,
      icon: image
    });

}

