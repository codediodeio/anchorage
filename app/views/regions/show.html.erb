<% content_for :title, "#{@region.name} Boating Locations" %>
<% content_for :head do %>
 <meta name="description" content="Explore boating and cruising destinations within the <%= @region.name %> region">
<% end %>

<div class="map-container">
  <h1 class="title-flag shadow">Anchorages and Marinas in <%= @region.name %> </h1>
  <%= render partial: "shared/supermap", locals: { locations: @map_locations } %>
  <%= render partial: 'shared/supermap_script' %>
</div>




<%= render partial: 'regions/filters' %>

<div id="locationFeed">
  <%= render @locations %>
</div>

