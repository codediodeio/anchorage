<% content_for :title, "Boating Map of the #{@region.name} Region" %>
<% content_for :head do %>
 <meta name="description" content="Full sized map for boaters of the <%= @region.name %> region.">
<% end %>

<h1>Boating Map of <%= link_to @region.name, @region %></h1>

<div class="row">
  <div class="col-xs-12 col-md-12">
    <div class="well">
      <div id="map-attr" data-locations="<%= @map_locations %>"></div>
      <div id="map-canvas" class="full-map"></div>
      <%= render partial: 'shared/supermap_script' %>
    </div>
  </div>
</div>

<%= link_to @region, class: 'btn btn-info btn-sm' do %>
<i class="fa fa-chevron-left"></i> Back
<% end %>
