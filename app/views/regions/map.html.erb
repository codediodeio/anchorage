<% content_for :title, "Boating Map of the #{@region.name} Region" %>
<% content_for :head do %>
 <meta name="description" content="Full sized map for boaters of the <%= @region.name %> region.">
<% end %>

<h1>Boating Map of <%= link_to @region.name, @region %></h1>

<div class="row">

      <div id="map-canvas" class="full-map" data-map-markers="<%= map_data_region_path(@region) %>">
        <div class="loader">
          <i class="hi hi-spin hi-cog"></i> Building Map...
        </div>
      </div>

</div>

<div class="blank-space"></div>

<%= link_to @region, class: 'btn btn-info btn-sm' do %>
<i class="hi hi-chevron-left"></i> Back
<% end %>
