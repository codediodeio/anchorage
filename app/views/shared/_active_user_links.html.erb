<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> <i class="hi hi-user"></i> <%= current_user.username %> <span class="caret"></span></a>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to dashboard_path do %>
      <i class="hi hi-dashboard"></i> Dashboard
    <% end %>
    </li>
    <li><%= link_to conversations_path do %>
      <i class="hi hi-comments"></i> Conversations
    <% end %>
    </li>
    <li><%= link_to new_location_path do %>
      <i class="hi hi-anchor"></i> New Anchorage
    <% end %>
    </li>
    <li>
      <%= link_to edit_profile_path, remote: true do %>
      <i class="hi hi-pencil"></i> Edit Profile
    <% end %>
    </li>
    <li class="divider"></li>
    <% current_user.guides.each do |guide| %>
    <li><%= link_to  user_guide_path(id: guide.permalink, user_id: guide.user.id) do %>
      <i class="hi hi-book"></i> <%= guide.name %>
    <% end %>
    </li>
    <% end %>

    <li class="divider"></li>
    <li><%= link_to "Logout", logout_path, method: :delete %></li>
  </ul>
</li>
