<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> <%= fa_icon "user" %> <%= current_user.username %> <span class="caret"></span></a>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to "Dashboard", dashboard_path %></li>
    <li><%= link_to "Edit Account", edit_profile_path, remote: true %></li>
    <li class="divider"></li>
    <% current_user.guides.each do |guide| %>
    <li><%= link_to guide.name,  user_guide_path(id: guide.permalink, user_id: guide.user.id) %></li>
    <% end %>

    <li class="divider"></li>
    <li><%= link_to "Logout", logout_path, method: :delete %></li>
  </ul>
</li>
