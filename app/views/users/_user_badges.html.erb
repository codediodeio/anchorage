<% @user.badges.each do |badge| %>

<% if badge.custom_fields[:difficulty] == :gold %>
<%= link_to badge_path(id: badge.id, name: badge.name), class: "label label-gold" do %>
<i class="hi hi-certificate"></i> <%= badge.name %>
<% end %>
<% end %>

<% if badge.custom_fields[:difficulty] == :silver %>
<%= link_to badge_path(id: badge.id, name: badge.name), class: "label label-silver" do %>
<i class="hi hi-certificate"></i> <%= badge.name %>
<% end %>
<% end %>

<% if badge.custom_fields[:difficulty] == :bronze %>
<%= link_to badge_path(id: badge.id, name: badge.name), class: "label label-bronze" do %>
<i class="hi hi-certificate"></i> <%= badge.name %>
<% end %>
<% end %>

<% end %>
