<% @user.badges.each do |badge| %>

<% if badge.custom_fields[:difficulty] == :gold %>
<%= link_to badge_path(id: badge.id, name: badge.name), class: "gold-badge" do %>
<i class="fa fa-certificate"></i> <%= badge.name %>
<% end %>
<% end %>

<% if badge.custom_fields[:difficulty] == :silver %>
<%= link_to badge_path(id: badge.id, name: badge.name), class: "silver-badge" do %>
<i class="fa fa-certificate"></i> <%= badge.name %>
<% end %>
<% end %>

<% if badge.custom_fields[:difficulty] == :bronze %>
<%= link_to badge_path(id: badge.id, name: badge.name), class: "bronze-badge" do %>
<i class="fa fa-certificate"></i> <%= badge.name %>
<% end %>
<% end %>

<% end %>
